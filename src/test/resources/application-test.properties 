# Test profile — uses H2 in-memory database
# Place in src/test/resources/application-test.properties

spring.datasource.url=jdbc:h2:mem:eatyaar_test;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
spring.datasource.driver-class-name=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=false

# Dummy JWT config for tests
jwt.secret=test_secret_key_minimum_32_characters_long
jwt.expiration=3600000

# Dummy mail config — email not sent in tests
spring.mail.host=localhost
spring.mail.port=25
spring.mail.username=test@test.com
spring.mail.password=test
spring.mail.properties.mail.smtp.auth=false
spring.mail.properties.mail.smtp.ssl.enable=false
mail.test.recipient=test@test.com